{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json", 
  "ts-node": {
    "esm": true, // «———— enabling ESM for ts-node   
  }, 
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}